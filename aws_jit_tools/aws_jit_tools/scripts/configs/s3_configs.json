{
    "Data Lake Read Access": {
        "name": "data_lake_read",
        "description": "Grants read-only access to data lake buckets",
        "buckets": [
            {
                "name": "company-data-lake-prod",
                "account_id": "123456789012"
            },
            {
                "name": "company-data-lake-staging", 
                "account_id": "123456789012"
            }
        ],
        "policy_template": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Action": [
                        "s3:GetObject",
                        "s3:ListBucket"
                    ],
                    "Resource": [
                        "arn:aws:s3:::{bucket_name}",
                        "arn:aws:s3:::{bucket_name}/*"
                    ]
                }
            ]
        },
        "session_duration": "PT1H"
    }
} 
